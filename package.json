{
  "name": "hospitalrun",
  "version": "2.0.0",
  "description": "HospitalRun mono-repo",
  "repository": "https://github.com/HospitalRun/hospitalrun.git",
  "author": "Maksim Sinik <maksim@sinik.it>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@4.0.2",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "commit": "npx git-cz",
    "build": "yarn workspaces foreach -A run build",
    "test": "yarn workspaces foreach -A run test",
    "lint": "yarn workspaces foreach -A run lint",
    "dev:frontend": "yarn workspace @hospitalrun/frontend start",
    "dev:server": "yarn workspace @hospitalrun/server dev",
    "update": "yarn upgrade-interactive"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^8.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
