{
  "name": "hospitalrun",
  "version": "2.0.0",
  "description": "HospitalRun mono-repo",
  "repository": "https://github.com/HospitalRun/hospitalrun.git",
  "author": "Maksim Sinik <maksim@sinik.it>",
  "license": "MIT",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "commit": "npx git-cz",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "dev:frontend": "npm run start --workspace=@hospitalrun/frontend",
    "dev:server": "npm run dev --workspace=@hospitalrun/server",
    "update": "npm update"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.0",
    "@commitlint/config-conventional": "^18.4.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "~8.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
